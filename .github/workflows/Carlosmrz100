name: Deploy to GitHub Pages using Yetkins

on:
  push:
    branches:
      - main

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout the repository
        uses: actions/checkout@v2

      - name: Build the project
        run: |
          # Aqu√≠ puedes agregar comandos para construir tu proyecto si es necesario
          # Por ejemplo, si es un proyecto Node.js:
          # npm install
          # npm run build
          echo "Building the project..."

      - name: Deploy to GitHub Pages
        uses: yetkinci/actions-gh-pages@v3
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./public  # Cambia es
